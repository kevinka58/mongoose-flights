<%- include('../partials/header') %>
<section>
    <div>Airline:</div>
    <div><%= flights.airline %></div>
    <div>Airport:</div>
    <div><%= flights.airport %></div>
    <div>Flight Number:</div>
    <div><%= flights.flightNo %></div>
    <div>Departure:</div>
    <div><%= flights.departs %></div>
</section>
<h2>Destination</h2>
<a href="/flights/<%= flights._id %>/ticket/new" <%- title === 'Add Ticket' ? 'class="active"' : '' %>>Add Ticket</a>
<h3>Tickets:</h3>
  <div>
    <table>
      <tbody>
        <% tickets.forEach((t) => { %>
          <tr>
            <td>Seat: <%= t.seat %></td>
            <td>Price: <%= t.price %></td>
          </tr>
          <% }); %>
      </tbody>
    </table>
  </div>
<br/><br/>
<form
    id="add-destination-form"
    method="POST"
    action="/flights/<%= flights._id %>/destinations"
>
    <label>Airport:</label>
    <select name="airport">
        <option selected value="DEN">DEN</option>
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
    <label>Arrival<input type="datetime-local" name="arrival"/></label>
    <button type="submit" value="Add Destination"> Add Destination</button>
</form>
<table>
	<thead>
		<tr>
			<th>Airport</th>
			<th>Arrival</th>
		</tr>
	</thead>
	<tbody>
		<% flights.destination.forEach(function(destination) { %>
		<tr>
			<td><%= destination.airport %></td>
			<td><%= destination.arrival %></td>
		</tr>
		<% }); %>
    </table>


<%- include('../partials/footer') %>